{% doc %}
  @prompt
    image from library that has z-index less than the product image position absolute and negative left margin
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-layered-images-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.spacing }}px;
  }

  .ai-layered-images__wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-layered-images__library-image-{{ ai_gen_id }} {
    position: absolute;
    left: {{ block.settings.library_image_offset }}%;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    width: {{ block.settings.library_image_width }}%;
    max-width: 100%;
  }

  .ai-layered-images__library-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.library_image_radius }}px;
  }

  .ai-layered-images__library-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.library_image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1 / 1;
  }

  .ai-layered-images__library-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-layered-images__product-image-{{ ai_gen_id }} {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    width: {{ block.settings.product_image_width }}%;
    max-width: 100%;
  }

  .ai-layered-images__product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.product_image_radius }}px;
  }

  .ai-layered-images__product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.product_image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1 / 1;
  }

  .ai-layered-images__product-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  @media screen and (max-width: 749px) {
    .ai-layered-images-{{ ai_gen_id }} {
      padding: {{ block.settings.spacing | times: 0.5 }}px;
    }

    .ai-layered-images__wrapper-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height | times: 0.7 }}px;
    }

    .ai-layered-images__library-image-{{ ai_gen_id }} {
      width: {{ block.settings.library_image_width | times: 1.2 }}%;
    }

    .ai-layered-images__product-image-{{ ai_gen_id }} {
      width: {{ block.settings.product_image_width | times: 1.2 }}%;
    }
  }
{% endstyle %}

<div class="ai-layered-images-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
<div class="ai-layered-images__library-image-{{ ai_gen_id }}">
      {% if block.settings.library_image %}
        <img
          src="{{ block.settings.library_image | image_url: width: 1000 }}"
          alt="{{ block.settings.library_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.library_image.width }}"
          height="{{ block.settings.library_image.height }}"
        >
      {% else %}
        <div class="ai-layered-images__library-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  <div class="ai-layered-images__wrapper-{{ ai_gen_id }}">
    

    <div class="ai-layered-images__product-image-{{ ai_gen_id }}">
      {% if block.settings.product_image %}
        {% if block.settings.product_image.featured_image %}
          <img
            src="{{ block.settings.product_image.featured_image | image_url: width: 1000 }}"
            alt="{{ block.settings.product_image.featured_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.product_image.featured_image.width }}"
            height="{{ block.settings.product_image.featured_image.height }}"
          >
        {% else %}
          <div class="ai-layered-images__product-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      {% else %}
        <div class="ai-layered-images__product-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Layered images",
  "settings": [
    {
      "type": "header",
      "content": "Library image"
    },
    {
      "type": "image_picker",
      "id": "library_image",
      "label": "Library image"
    },
    {
      "type": "range",
      "id": "library_image_width",
      "min": 30,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Width",
      "default": 60
    },
    {
      "type": "range",
      "id": "library_image_offset",
      "min": -30,
      "max": 10,
      "step": 5,
      "unit": "%",
      "label": "Horizontal offset",
      "default": -15
    },
    {
      "type": "range",
      "id": "library_image_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Product image"
    },
    {
      "type": "product",
      "id": "product_image",
      "label": "Product"
    },
    {
      "type": "range",
      "id": "product_image_width",
      "min": 30,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Width",
      "default": 50
    },
    {
      "type": "range",
      "id": "product_image_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Container width",
      "default": 800
    },
    {
      "type": "range",
      "id": "min_height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Minimum height",
      "default": 500
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Spacing",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Layered images"
    }
  ]
}
{% endschema %}
