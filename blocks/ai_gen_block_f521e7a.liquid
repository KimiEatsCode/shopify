{% doc %}
  @prompt
    image from library that has z-index and is position absolute with a negative left margin, also add a right position and bottom position option 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-absolute-image-{{ ai_gen_id }} {
    position: absolute;
    width: 100%;
    min-height: {{ block.settings.container_height }}px;
    overflow: visible;
  }

  .ai-absolute-image__img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-absolute-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-absolute-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
  }

  .ai-absolute-image__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-absolute-image__wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.7 }}px;
      {% if block.settings.position_type == 'top_left' or block.settings.position_type == 'bottom_left' %}
        margin-left: -{{ block.settings.negative_margin | times: 0.7 }}px;
      {% else %}
        margin-right: -{{ block.settings.negative_margin | times: 0.7 }}px;
      {% endif %}
    }
  }
{% endstyle %}

<div class="ai-absolute-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
 {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-absolute-image__img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-absolute-image__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-absolute-image__empty-state-{{ ai_gen_id }}">
          Add an image
        </div>
      </div>
    {% endif %}
 
  </div>


{% schema %}
{
  "name": "abs fix positioned image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 100,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Image width",
      "default": 400
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Position"
    },
    {
      "type": "range",
      "id": "container_height",
      "min": 200,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Container height",
      "default": 400
    },
    {
      "type": "select",
      "id": "position_type",
      "label": "Position type",
      "options": [
        {
          "value": "top_left",
          "label": "Top left"
        },
        {
          "value": "top_right",
          "label": "Top right"
        },
        {
          "value": "bottom_left",
          "label": "Bottom left"
        },
        {
          "value": "bottom_right",
          "label": "Bottom right"
        }
      ],
      "default": "top_left"
    },
    {
      "type": "range",
      "id": "top_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Top position",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Bottom position",
      "default": 50
    },
    {
      "type": "range",
      "id": "left_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Left position",
      "default": 50
    },
    {
      "type": "range",
      "id": "right_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Right position",
      "default": 50
    },
    {
      "type": "range",
      "id": "negative_margin",
      "min": 0,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Negative margin",
      "default": 100
    },
    {
      "type": "range",
      "id": "z_index",
      "min": 1,
      "max": 100,
      "step": 1,
      "label": "Z-index",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "absolute positioned image"
    }
  ]
}
{% endschema %}
