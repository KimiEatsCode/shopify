{% doc %}
  @prompt
    image from library that has z-index and is position absolute with a negative left margin, also add a right position and bottom position option
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-positioned-image-{{ ai_gen_id }} {
    position: absolute;
    z-index: {{ block.settings.z_index }};
    margin-left: {{ block.settings.left_margin }}px;
    {% if block.settings.enable_right_position %}
      right: {{ block.settings.right_position }}px;
    {% endif %}
    {% if block.settings.enable_bottom_position %}
      bottom: {{ block.settings.bottom_position }}px;
    {% endif %}
    max-width: 100%;
  }

  .ai-positioned-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
  }

  .ai-positioned-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-positioned-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.border_radius }}px;
    min-height: 300px;
  }

  .ai-positioned-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  @media screen and (max-width: 749px) {
    .ai-positioned-image-{{ ai_gen_id }} {
      margin-left: {{ block.settings.left_margin | times: 0.5 }}px;
      {% if block.settings.enable_right_position %}
        right: {{ block.settings.right_position | times: 0.5 }}px;
      {% endif %}
      {% if block.settings.enable_bottom_position %}
        bottom: {{ block.settings.bottom_position | times: 0.5 }}px;
      {% endif %}
    }
  }
{% endstyle %}

<div
  class="ai-positioned-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-positioned-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-positioned-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Positioned image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 100,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 500
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Position"
    },
    {
      "type": "range",
      "id": "z_index",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Z-index",
      "default": 1
    },
    {
      "type": "range",
      "id": "left_margin",
      "min": -500,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Left margin",
      "default": -50
    },
    {
      "type": "checkbox",
      "id": "enable_right_position",
      "label": "Enable right position",
      "default": false
    },
    {
      "type": "range",
      "id": "right_position",
      "min": 0,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Right position",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "enable_bottom_position",
      "label": "Enable bottom position",
      "default": false
    },
    {
      "type": "range",
      "id": "bottom_position",
      "min": 0,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Bottom position",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Positioned image"
    }
  ]
}
{% endschema %}
